<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_color"
    tools:context=".Controllers.TransferView">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="150dp"
        android:src="@drawable/right_book"
        app:layout_constraintBottom_toTopOf="@+id/local_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:layout_marginStart="40dp"
        android:layout_marginBottom="150dp"
        android:id="@+id/imageView3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/left_book"
        app:layout_constraintBottom_toTopOf="@+id/local_text_view"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/right_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/proxima_nova_medium"
        android:text="@string/transfer_default_book_name"
        android:textColor="@color/app_gray_color"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/local_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/left_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/proxima_nova_medium"
        android:text="@string/transfer_default_book_name"
        android:textColor="@color/app_gray_color"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/local_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/local_text_view"
        android:layout_marginBottom="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proxima_nova_medium"
        android:text="@string/transfer_local_text"
        android:textColor="@color/app_gray_color"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/date_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/transfer_local"
        android:layout_marginBottom="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proxima_nova"
        android:text="@string/default_local"
        android:textColor="@color/app_gray_color"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/date_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/date_text_view"
        android:layout_marginBottom="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proxima_nova_medium"
        android:text="@string/transfer_date_text"
        android:textColor="@color/app_gray_color"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/finish_bt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/transfer_date_textview"
        android:layout_marginBottom="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proxima_nova"
        android:text="@string/default_date"
        android:textColor="@color/app_gray_color"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/finish_bt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/finish_bt"
        android:layout_marginBottom="15dp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/app_yellow_color"
        android:text="@string/finish"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/cancelTransfer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/cancelTransfer"
        android:textColor="#458A8A"
        android:textSize="18sp"
        android:fontFamily="@font/proxima_nova_medium"
        android:layout_marginBottom="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel_transfer_text"
        app:layout_constraintBottom_toTopOf="@+id/bottom_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/bottom_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:alpha="0.4"
        android:text="@string/app_name_ltda"
        android:textColor="#DFDFDF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>